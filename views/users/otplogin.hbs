                  <label class="form-label" for="form3Example4cdg">Enter 6 digit OTP</label>
                </div>



                 <div>
                    <p class="text-danger">{{err}}</p>
                </div>


                <div class="d-flex justify-content-center">
                  
                    <button type="submit" class="btn btn-dark btn-lg mb-1">Submit</button>
                    
               
              </form>
             
               </div>
                </div>
