{{>user-header}}
<!--Section: Contact v.2-->
<div class="container mt-5">
<section class="mb-4 mt-5">

    <!--Section heading-->
    <h2 class="h1-responsive font-weight-bold text-center my-4 mt-5">Contact us</h2>
    <!--Section description-->
    <p class="text-center w-responsive mx-auto mb-5">Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to you within
        a matter of hours to help you.</p>

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form  id="contactform" name="myform" action="/contact" method="POST"  required>

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="name" name="name" class="form-control" required>
                            <label for="name" class="">Your name</label>
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6">
                        <div class="md-form mb-0">
                            <input type="text" id="email" name="email" class="form-control" required>
                            <label for="email" class="">Your email</label>
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12">
                        <div class="md-form mb-0">
                            <input type="text" id="subject" name="subject" class="form-control" required>
                            <label for="subject" class="">Subject</label>
                        </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12">

                        <div class="md-form">
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea"></textarea>
                            <label for="message">Your message</label>
                        </div>

                    </div>
                </div>
                <!--Grid row-->
 <p class="text-danger" id="errAdd"></p>
            

            <div class="text-center text-md-left mt-4">
                <a class="btn btn-warning" style="height:40px;" onclick=" return formValidate()">Send</a>
            </div>
           </form>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3 text-center mb-5">
            <ul class="list-unstyled mb-3">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>San Francisco, CA 94126, USA</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>+ 01 234 567 89</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>contact@mdbootstrap.com</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>

</section></div></div>


  <script>
    function formValidate(){
      let name = document.myform.name.value;
      let email = document.myform.email.value;
      let subject = document.myform.subject.value;
      let message = document.myform.message.value;
     
       let emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/
            let nameRegex = /^([A-Za-z ]){5,25}$/gm;
            let subjectRegex=/^([A-Za-z0-9 ]){8,20}$/gm;
            let messageRegex=/^([A-Za-z0-9 ]){10,50}$/gm;

            if(email == ''){
            document.getElementById('errAdd').innerHTML="Email id required";
                return false;
            }
            else if(emailRegex.test(email) == false){
            document.getElementById('errAdd').innerHTML = "Enter valid email id";
                return false;
            }
            else if(name == ''){
            document.getElementById('errAdd').innerHTML="Name required";
                return false;
            }
            else if(nameRegex.test(name) == false){
            document.getElementById('errAdd').innerHTML = "Enter valid name";
                return false;
            }
            else if(subject == ''){
            document.getElementById('errAdd').innerHTML="Name required";
                return false;
            }
            else if(subjectRegex.test(subject) == false){
            document.getElementById('errAdd').innerHTML = "Enter valid subject";
                return false;
            }
            else if(message == ''){
            document.getElementById('errAdd').innerHTML="Name required";
                return false;
            }
            else if(messageRegex.test(message) == false){
            document.getElementById('errAdd').innerHTML = "Enter valid name";
                return false;
            }
           
           $.ajax({
            url:'/contact',
            method:'post',
            data:$('#contactform').serialize(),
            success:(response)=>{
               if(response.status){
                console.log("success")
               }else{
                console.log("failed")
               }

            }
           })
        }


  </script>

